{
  "name": "Chrome Extension Starter",
  "description": "Chrome Extension Starter",
  "version": "1.0.0",
  "manifest_version": 3,
  "homepage_url": "https://github.com/avivharuzi/chrome-extension-starter",
  "background": {
    "service_worker": "scripts/background/main.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["scripts/content/main.js"],
      "matches": [
        "https://web-pg.web.app/*"
      ]
    },
    {
      "all_frames": true,
      "js": ["scripts/wagora/main.js"],
      "matches": [
        "https://g.gxwagora.jp/*"
      ]
    }
  ],
  "action": {
    "default_icon": "images/icon-128x128.png"
  },
  "icons": {
    "16": "images/icon-16x16.png",
    "32": "images/icon-32x32.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "devtools_page": "devtools.html",
  "options_page": "pages/options/index.html",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}
